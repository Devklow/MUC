{% extends 'base.html.twig' %}

{% block title %}Objet{% endblock %}

{% block body %}
<div class="card elevation-2">
    <div class="card-header">
        <h6 class="card-title">Visualisation de Objet</h6>
    </div>
    <div class="card-body">
        <dl class="row">
                            <dt class="col-sm-6 text-right">Id :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.id }}</dd>
                            <dt class="col-sm-6 text-right">Nom :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.nom }}</dd>
                            <dt class="col-sm-6 text-right">Valeur :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.valeur }}</dd>
                            <dt class="col-sm-6 text-right">Poids :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.poids }}</dd>
                            <dt class="col-sm-6 text-right">Description :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.description }}</dd>
                            <dt class="col-sm-6 text-right">EstUneMonnaie :</dt>
                <dd class="col-sm-6 text-secondary">{{ objet.estUneMonnaie ? 'Yes' : 'No' }}</dd>
                    </dl>
    </div>
    <div class="card-footer text-center d-flex justify-content-center">
        <a class="btn btn-outline-secondary mr-2" href="{{ path('objet_liste') }}">Retour</a>
        <a class="btn btn-outline-warning mr-2" href="{{ path('objet_modifier', {'id': objet.id}) }}">Modifier</a>
        {{ include('objet/_delete_form.html.twig') }}
    </div>

{% endblock %}
