{% extends 'base.html.twig' %}

{% block title %}Competence{% endblock %}

{% block body %}
<div class="card elevation-2">
    <div class="card-header">
        <h6 class="card-title">Visualisation de Competence</h6>
    </div>
    <div class="card-body">
        <dl class="row">
                            <dt class="col-sm-6 text-right">Id :</dt>
                <dd class="col-sm-6 text-secondary">{{ competence.id }}</dd>
                            <dt class="col-sm-6 text-right">Nom :</dt>
                <dd class="col-sm-6 text-secondary">{{ competence.nom }}</dd>
                            <dt class="col-sm-6 text-right">Description :</dt>
                <dd class="col-sm-6 text-secondary">{{ competence.description }}</dd>
                    </dl>
    </div>
    <div class="card-footer text-center d-flex justify-content-center">
        <a class="btn btn-outline-secondary mr-2" href="{{ path('competence_liste') }}">Retour</a>
        <a class="btn btn-outline-warning mr-2" href="{{ path('competence_modifier', {'id': competence.id}) }}">Modifier</a>
        {{ include('competence/_delete_form.html.twig') }}
    </div>

{% endblock %}
