{% extends 'base.html.twig' %}

{% block title %}Caracteristique{% endblock %}

{% block body %}
<div class="card elevation-2">
    <div class="card-header">
        <h6 class="card-title">Visualisation de Caracteristique</h6>
    </div>
    <div class="card-body">
        <dl class="row">
                            <dt class="col-sm-6 text-right">Id :</dt>
                <dd class="col-sm-6 text-secondary">{{ caracteristique.id }}</dd>
                            <dt class="col-sm-6 text-right">Nom :</dt>
                <dd class="col-sm-6 text-secondary">{{ caracteristique.nom }}</dd>
                            <dt class="col-sm-6 text-right">Unite :</dt>
                <dd class="col-sm-6 text-secondary">{{ caracteristique.unite }}</dd>
                    </dl>
    </div>
    <div class="card-footer text-center d-flex justify-content-center">
        <a class="btn btn-outline-secondary mr-2" href="{{ path('caracteristique_liste') }}">Retour</a>
        <a class="btn btn-outline-warning mr-2" href="{{ path('caracteristique_modifier', {'id': caracteristique.id}) }}">Modifier</a>
        {{ include('caracteristique/_delete_form.html.twig') }}
    </div>

{% endblock %}
